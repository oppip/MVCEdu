@model MVCEdu.ViewModels.AuthStudentViewModel
@{
    ViewData["Title"] = "Студенти и нивните предмети";
}
<h1>Прикажи ги предметите за студентот @Html.DisplayFor(model => model.StudentList[0].FirstName) @Html.DisplayFor(model => model.StudentList[0].LastName)</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                Courses:
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.StudentList)
        {
            <tr>
                <td>

                    @Html.DisplayFor(modelItem => item.FirstName)
                    @Html.DisplayFor(modelItem => item.LastName)

                </td>
                <td>
                    @foreach (var course in item.Courses)
                    {
                        <a asp-action="EditStudent" asp-route-courseId="@course.Id" asp-route-studentId="@item.Id">@course.Course.Title</a>
                    }
                </td>
                <td>
                    <a asp-action="EditStudent" asp-route-id="@item.Id">Промени</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                </td>
            </tr>
        }
    </tbody>
</table>